                <% end %>
                <div class="media-body">
                  <h5 class="mt-0"><%= link_to article['title'], article_path(url_to_hash(article['url'])) %></h5>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>

<footer class="p-3 bg-dark text-white">
  <div class="container">
    <p class = "text-right">
      <a href="#" class="text-white">ページトップへ</a>
    </p>
  </div>
</footer>
<% else %>
