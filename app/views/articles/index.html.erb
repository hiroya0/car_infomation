<% if user_signed_in? %>
  <header class="header-large bg-dark py-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= form_tag articles_path, method: :get, class: "form-inline my-2 my-lg-0 mr-auto" do %>
          <%= text_field_tag :q_title_or_content_cont, nil, class: "form-control mr-sm-2" %>
          <%= submit_tag "検索", class: "btn btn-primary my-2 my-sm-0" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item my-2"><%= link_to 'トップページに戻る', root_path, class: "nav-link text-white mx-2" %></li>
            <li class="nav-item my-2"><%= link_to '投稿一覧', comments_path, class: "nav-link text-white mx-2" %></li>
            <li class="nav-item my-2"><%= link_to 'ブックマーク一覧', bookmarks_path, class: "nav-link text-white mx-2" %></li>
            <li class="nav-item my-2 text-white"><%= link_to current_user.username, edit_user_registration_path, class: "nav-link text-white mx-2" %></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
      <%= link_to 'トヨタ', articles_path(q_company: 'トヨタ'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to '日産', articles_path(q_company: '日産'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'ホンダ', articles_path(q_company: 'ホンダ'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'スズキ', articles_path(q_company: 'スズキ'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'ダイハツ', articles_path(q_company: 'ダイハツ'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'レクサス', articles_path(q_company: 'レクサス'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'マツダ', articles_path(q_company: 'マツダ'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to 'スバル', articles_path(q_company: 'スバル'), class: 'btn btn-outline-primary mr-2' %>
      <%= link_to '三菱', articles_path(q_company: '三菱'), class: 'btn btn-outline-primary mr-2' %>
        <% @articles.each do |article| %>
          <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4 shadow-sm d-flex flex-column">
              <% if article["urlToImage"].present? %> 
                <%= image_tag article["urlToImage"], alt: 'ArticleImage', class: 'card-img-top img-fluid' %>
              <% else %>
                <%= image_tag '/images/car3_gray.png', alt: '車のイラスト', class: 'card-img-top img-fluid' %>
              <% end %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= article["title"] %></h5>
                <p class="mb-1 text-muted">
                  <%= Time.parse(article['publishedAt']).strftime('%Y年%m月%d日') %>
                </p>
                <%= link_to "詳細を見る", article_path(url_to_hash(article["url"])) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <footer class="p-3  bg-dark text-white">
      <div class="container">
          <p class="text-right">
            <a href="#" class="text-white">ページトップへ</a>
          </p>
      </div>
  </footer>
<% else %>
  <header class="header-large bg-dark py-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= form_tag articles_path, method: :get, class: "form-inline my-2 my-lg-0 mr-auto" do %>
          <%= text_field_tag :q_title_or_content_cont, nil, class: "form-control mr-sm-2" %>
          <%= submit_tag "検索", class: "btn btn-primary my-2 my-sm-0" %>
        <% end %>
