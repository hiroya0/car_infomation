<header class="header-large bg-dark py-3">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <h2 class="navbar-brand" href="#">ブックマーク一覧</h2>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item my-2"><%= link_to '投稿一覧', comments_path, class: "text-white mx-2" %></li>
        <li class="nav-item my-2"><%= link_to '記事一覧に戻る', articles_path, class: "text-white mx-2" %></li>
        <li class="nav-item my-2"><%= link_to 'トップページに戻る', root_path, class: "text-white mx-2" %></li>
        <li class="nav-item my-2 mx-2 text-white"><%= current_user.username %></li>
      </ul>
    </div>
  </div>
  </nav>
</header>

  <% @bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <% if bookmark.article.urlToImage.present? %>
          <%= image_tag bookmark.article.urlToImage, class: "card-img-top", alt: "Card image cap" %>
        <% else %>
          <%= image_tag 'default_image.png', class: "card-img-top", alt: "Default image" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.article.title %></h5>
          <div class="btn-group d-flex justify-content-between align-items-center">
            <%= link_to '元の記事を読む', bookmark.article.url, class: 'btn btn-outline-secondary' %>
            <%= button_to 'ブックマーク解除', bookmark_path(bookmark), method: :delete, 
            data: { confirm: 'このブックマークを削除しますか？' }, class: "btn btn-outline-danger" %>
          </div>
          <small class="text-muted">ブックマークした日時: <%= (bookmark.created_at) %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>

<footer class="p-3  bg-dark text-white">
    <div class="container">
        <p class = "text-right">
          <a href="#" class="text-white">ページトップへ</a>
        </p>
    </div>
</footer>
